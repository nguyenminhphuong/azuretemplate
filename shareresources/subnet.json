{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string"
    },
    "subnetlist": {
      "type": "array"
    }
  },
  "variables": {
    "singleQuote": "'"
  },
  "resources": [
    {
      "copy": {
        "count": "[length(parameters('subnetlist'))]",
        "mode": "Serial",
        "name": "subnetloop"
      },
      "name": "[concat(parameters('vnetName'), '/', parameters('subnetlist')[copyIndex()].name)]",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2017-10-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressPrefix": "[parameters('subnetlist')[copyIndex()].addressPrefix]",
        "networkSecurityGroup": "[if(equals(parameters('subnetlist')[copyIndex()].nsgName, json('null')), json('null'),  json(concat(variables('singleQuote'),'{\"id\":', '\"',resourceId('Microsoft.Network/networkSecurityGroups', parameters('subnetlist')[copyIndex()].nsgName), '\"', '}', variables('singleQuote') )) ) ]"
      }
    }
  ],
  "outputs": {
    "firstNsg" : {
      "type": "string",
      "value": "[parameters('subnetlist')[0].nsgName]"
    },
    "jsonEval" : {
      "type": "string",
      "value": "[if(equals(parameters('subnetlist')[0].nsgName, json('null')), json('null'),  json(concat(variables('singleQuote'),'{\"id\":', '\"',resourceId('Microsoft.Network/networkSecurityGroups', parameters('subnetlist')[0].nsgName), '\"', '}', variables('singleQuote') )) ) ]"
    }
  }
}
